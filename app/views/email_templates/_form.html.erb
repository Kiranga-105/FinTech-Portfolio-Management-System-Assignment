<%= form_with model: template, local: true do |f| %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :subject %><br/>
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :body %><br/>
    <%= f.text_area :body, rows: 10, cols: 60 %>
  </p>
  <p><%= f.submit %></p>
<% end %>
